@page "/ForgotPassword"
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "/Areas/Identity/Pages/Shared/_LayoutAccount.cshtml";
}

<form class="md-float-material form-material" method="post">  
    <div class="auth-box card">
        <div class="card-block">
            <div class="row m-b-20">
                <div class="col-md-12">
                    <h3 class="text-left">Khôi phục mật khẩu</h3>
                </div>
            </div>
            <div class="form-group form-primary">
                <input type="text" asp-for="Input.Email" name="email-address" class="form-control" required="" placeholder="Nhập địa chỉ email">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <button type="button" class="btn btn-primary btn-md btn-block waves-effect text-center m-b-20">Reset mật khẩu</button>
                </div>
            </div>
            <p class="f-w-600 text-right">Quay lại <a href="/Login">đăng nhập.</a></p>            
        </div>
    </div>
</form>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
