@page "/Admin/Account/ChangePassword"
<div class="row">
    <div class="col-sm-12">
        <div class="white-box">
            <h3 class="box-title m-b-0">Thay đổi mật khẩu</h3>
            <p class="text-muted m-b-30 font-13"> Thay đổi mật khẩu </p>
            <EditForm Model="changePwdModel" OnValidSubmit="PostChangePassword">
                <DataAnnotationsValidator />
                <input type="hidden" class="form-control" asp-for="UserName">
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Mật khẩu hiện tại</label>
                    <div class="col-sm-10">
                        <InputText type="password" class="form-control" @bind-Value="changePwdModel.CurrentPassword" placeholder="Mật khẩu hiện tại" />
                        <span class="text-danger"><ValidationMessage For="() =>changePwdModel.CurrentPassword" /></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Mật khẩu mới</label>
                    <div class="col-sm-10">
                        <InputText type="password" class="form-control" @bind-Value="changePwdModel.Password" placeholder="Nhập mật khẩu mới" />
                        <span class="text-danger"><ValidationMessage For="() =>changePwdModel.Password" /></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Nhập lại Mật khẩu mới</label>
                    <div class="col-sm-10">
                        <InputText type="password" class="form-control" @bind-Value="changePwdModel.ConfirmPassword" placeholder="Xác nhận mật khẩu mới" />
                        <span class="text-danger"><ValidationMessage For="() =>changePwdModel.ConfirmPassword" /></span>
                    </div>
                </div>
                <div class="form-group row" style="display:flex; justify-content: center">
                    <button type="submit" class="btn btn-mat btn-primary"><i class="fa fa-key"></i>Cập nhật</button>
                </div>
            </EditForm>
        </div>
    </div>
</div>
            